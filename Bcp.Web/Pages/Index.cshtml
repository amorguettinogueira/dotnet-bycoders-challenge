@page
@model IndexModel

@section OffcanvasFiles {
    @if (Model.Files.Any())
    {
        <div class="list-group">
            @foreach (var file in Model.Files)
            {
                <a class="list-group-item list-group-item-action @(Model.SelectedFileId == file.FileId ? "active" : "")"
                   asp-page-handler="Select" asp-route-id="@file.FileId">@file.FileName</a>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No files available.</p>
    }
}

<div class="row flex-nowrap" data-selected-file-id="@(Model.SelectedFileId?.ToString() ?? string.Empty)">
    @if (Model.Files.Any())
    {
        <!-- Sidebar (hidden on small screens) -->
        <div class="d-none d-md-block col-md-3 col-xl-2 px-sm-2 px-0 bg-dark text-white">
            <div class="d-flex flex-column align-items-start px-3 pt-2 min-vh-100">
                <h5 class="text-white">Files</h5>
                <ul class="nav nav-pills flex-column mb-auto">
                    @foreach (var file in Model.Files)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white @(Model.SelectedFileId == file.FileId ? "active" : "")"
                               asp-page-handler="Select" asp-route-id="@file.FileId">
                                @file.FileName
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col py-3 d-flex flex-column" style="min-height: 0;">
            <!-- Store Summary -->
            <div class="card mb-3 flex-grow-1 d-flex flex-column">
                <div class="card-header d-flex align-items-center justify-content-between flex-wrap gap-2">
                    <h4 class="mb-0">Store Summary</h4>
                    @if (Model.SelectedFileId is not null)
                    {
                        <span class="badge bg-secondary">File #@Model.SelectedFileId</span>
                    }
                </div>
                <div class="card-body overflow-auto">
                    @if (Model.AggregatedData.Stores.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped align-middle" id="storeTable">
                                <thead>
                                    <tr>
                                        <th>Store Name</th>
                                        <th class="text-end">Total Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.AggregatedData.Stores)
                                    {
                                        <tr data-store-id="@item.StoreId" style="cursor:pointer" title="Tap to view transactions">
                                            <td>@item.StoreName</td>
                                            <td class="text-end">@item.Balance.ToString("C2")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th class="text-end">@Model.AggregatedData.Stores.Sum(s => s.Balance).ToString("C2")</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <small class="text-muted">Tap a row to toggle transactions for that store.</small>
                    }
                    else
                    {
                        <p class="text-muted">No transaction summary for this file.</p>
                    }
                </div>
            </div>

            <!-- Errors (auto size up to 33vh) -->
            <div class="card" style="max-height: 33vh;">
                <div class="card-header">
                    <h5 class="mb-0">File Upload Errors</h5>
                </div>
                <div class="card-body overflow-auto">
                    @{ var hasErrors = Model.AggregatedData.Error.Any(); }
                    @if (hasErrors)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped align-middle">
                                <thead>
                                    <tr>
                                        <th>Error Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var error in Model.AggregatedData.Error)
                                    {
                                        <tr>
                                            <td class="text-danger">@error</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No errors found for the selected file.</p>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col py-3">
            <div class="alert alert-info" role="alert">
                <h4 class="alert-heading">No Files Available</h4>
                <p class="mb-0">Import a file to start viewing transaction summaries.</p>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/drilldown.js" asp-append-version="true"></script>
}