@page
@model IndexModel

<div class="row flex-nowrap">
    @if (Model.Files.Any())
    {
        <!-- Sidebar -->
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark text-white">
            <div class="d-flex flex-column align-items-start px-3 pt-2 min-vh-100">
                <h5 class="text-white">Files</h5>
                    <ul class="nav nav-pills flex-column mb-auto">
                        @foreach (var file in Model.Files)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white @(Model.SelectedFileId == file.FileId ? "active" : "")"
                                    asp-page-handler="Select" asp-route-id="@file.FileId">
                                @file.FileName
                                </a>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>

        <!-- Main Content -->
        <div class="col py-3">
            <h2>Store Summary</h2>
            @if (Model.AggregatedData.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Store Name</th>
                            <th>Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.AggregatedData)
                        {
                            <tr>
                                <td>@item.StoreName</td>
                                <td>@item.Balance.ToString("C2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Select a file to view transaction summary.</p>
            }
        </div>
    }
    else
    {
        <h3 class="mt-3 text-danger">Import a file to start...</h3>
    }
</div>